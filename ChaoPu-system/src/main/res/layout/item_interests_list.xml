<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Item_Interests_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_seletor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/Item_Interests_Logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/default_head_img" />

            <TextView
                android:id="@+id/Item_Interests_BusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="商家名"
                android:textColor="@color/black" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Item_Interests_CardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝马官方延保4年"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Item_Interests_CardPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥ 25622.32"
                        android:textColor="@color/red"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/Item_Interests_CardOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限时直降 ￥88.9"
                        android:textColor="@color/red"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/Item_Interests_CardEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期 2019-56-25"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>


            </LinearLayout>

            <Button
                android:id="@+id/Item_Interests_Button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/wayto_button_red_selector"
                android:text="权益买单"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <TextView
            android:id="@+id/Item_Interests_CardTransactionNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="序列号 2019-56-25"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>