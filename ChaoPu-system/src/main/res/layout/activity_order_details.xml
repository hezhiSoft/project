<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/OrderDetails_BusinessName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="商家名"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/OrderDetails_Business_logo"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/OrderDetails_Business_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OrderDetails_CardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="常规小保养" />

            <TextView
                android:id="@+id/OrderDetails_CardSizeV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:text="数量2张" />

            <TextView
                android:id="@+id/OrderDetails_BuyAmount_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:text="合计￥ 899" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/OrderDetails_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:text="已付款2张" />

        <TextView
            android:id="@+id/OrderDetails_BuyAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="￥ 4488" />
    </RelativeLayout>

    <View
        style="@style/line_horizontal"/>

    <TextView
        android:id="@+id/OrderDetails_OrderNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="订单号：2333333" />

    <View
        style="@style/line_horizontal"/>

    <TextView
        android:id="@+id/OrderDetails_BuyTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="下单时间:899898" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:gravity="right"
        android:padding="10dp"
        android:text="对订单有疑问?" />

</LinearLayout>