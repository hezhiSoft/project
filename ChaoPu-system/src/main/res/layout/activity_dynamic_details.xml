<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jinggan.library.ui.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Dynamic_bg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_image" />

            <TextView
                android:id="@+id/Dynamic_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="14dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="14dp">

                <ImageView
                    android:id="@+id/Dynamic_Business_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/default_head_img" />

                <TextView
                    android:id="@+id/Dynamic_Business_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="Title"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <WebView
                android:id="@+id/Dynamic_Content_WebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="14dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/Dynamic_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_support"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/gray"
                    android:text="333"/>

                <TextView
                    android:id="@+id/Dynamic_relay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_relay"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/gray"
                    android:text="333"/>

            </LinearLayout>

        </LinearLayout>
    </com.jinggan.library.ui.view.OverScrollView>

</LinearLayout>