<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <LinearLayout
            android:id="@+id/DynamicFragment_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/DynamicFragment_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="商家动态"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

<!--        <RelativeLayout
            android:id="@+id/DynamicFragment_Search_Layout"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/DynamicFragment_title_layout"
            android:background="@color/white"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/icon_search"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="搜一搜" />

        </RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/DynamicFragment_search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="商家名称 商家 类目"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

    <com.jinggan.library.ui.widget.WaytoTabLayout
        android:id="@+id/HomeFragment_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabLayout_indicatorColor="@color/colorAccent"
        app:tabLayout_mode="MODE_SCROLLABLE"
        app:tabLayout_tab_defaultTextColor="#666666"
        app:tabLayout_tab_textColor="@color/colorAccent" />

</LinearLayout>